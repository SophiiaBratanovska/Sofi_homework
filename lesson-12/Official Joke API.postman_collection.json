		{
			"name": "/programming/random",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Статус відповіді 200 OK\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Відповідь є масивом\", function () {",
							"    let jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.be.an(\"array\");",
							"});",
							"",
							"pm.test(\"Масив містить елементи\", function () {",
							"    let jsonData = pm.response.json();",
							"    pm.expect(jsonData.length).to.be.above(0);",
							"});",
							"",
							"pm.test(\"Кожен елемент масиву має правильні поля\", function () {",
							"    let jsonData = pm.response.json();",
							"    jsonData.forEach((joke) => {",
							"        pm.expect(joke).to.have.property(\"id\").that.is.a(\"number\");",
							"        pm.expect(joke).to.have.property(\"type\").that.is.a(\"string\");",
							"        pm.expect(joke).to.have.property(\"setup\").that.is.a(\"string\");",
							"        pm.expect(joke).to.have.property(\"punchline\").that.is.a(\"string\");",
							"    });",
							"});",
							"",
							"pm.test(\"Всі жарти – типу 'programming'\", function () {",
							"    let jsonData = pm.response.json();",
							"    jsonData.forEach((joke) => {",
							"        pm.expect(joke.type).to.eql(\"programming\");",
							"    });",
							"});",
							"",
							"pm.test(\"Жарти мають непорожні setup і punchline\", function () {",
							"    let jsonData = pm.response.json();",
							"    jsonData.forEach((joke) => {",
							"        pm.expect(joke.setup).to.be.a(\"string\").and.not.empty;",
							"        pm.expect(joke.punchline).to.be.a(\"string\").and.not.empty;",
							"    });",
							"});",
							"",
							"pm.test(\"Отримано 1 жарт\", function () {",
							"    let jsonData = pm.response.json();",
							"    pm.expect(jsonData.length).to.eql(1);",
							"});"
